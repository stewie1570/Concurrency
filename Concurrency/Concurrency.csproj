<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <PackageId>Concurrency</PackageId>
    <Authors>Stewart Anderson</Authors>
    <Description>Similar to Task.WhenAll but allows you to limit the number of tasks in flight (max concurrency).</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/stewie1570/Concurrency</PackageProjectUrl>
    <PackageTags>async, concurrency, parallel, task, threading, wait, whenall</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>